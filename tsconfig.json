{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "types": ["mocha", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.test.ts"],
  "exclude": [
    "node_modules"
  ]
}
